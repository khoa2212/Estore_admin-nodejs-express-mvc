<!--Change profile info modal-->
<div class="modal fade" id="changeProfileModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title font-weight-normal" id="exampleModalLongTitle">Thay đổi thông tin tài khoản</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="post">
                <div class="modal-body font-weight-light">
                        <input type="hidden" name="uid" value="{{user.USER_ID}}"/>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="input-group input-group-static mb-4">
                                    <label>Họ</label>
                                    <input type="text" class="form-control" name="newLastName" value="{{user.HO}}">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="input-group input-group-static mb-4">
                                    <label>Tên</label>
                                    <input type="text" class="form-control" name="newFirstName" value="{{user.TEN}}">
                                </div>
                            </div>
                        </div>
                        <div class="input-group input-group-static mb-4">
                            <label>Số Banking</label>
                            <input type="text" class="form-control" name="newBank" value="{{user.SO_BANKING}}">
                        </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn bg-gradient-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn bg-gradient-primary">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

