<nav aria-label="Product Page navigation">
    <ul class="pagination justify-content-center">
        {{#previousPageNav page formLink originalUrl}}
            <li class="page-item">
                <a class="page-link" href="{{pageLink}}" tabindex="-1">
                                <span class="material-icons">
                                  keyboard_arrow_left
                                </span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>
        {{/previousPageNav}}
        {{#listPage page maxNumberOfPages formLink originalUrl}}
            <li class="page-item {{active}}"><a class="page-link" href="{{productPageLink}}">{{pageNumber}}</a></li>
        {{/listPage}}
        {{#nextPageNav page maxNumberOfPages formLink originalUrl}}
            <li class="page-item">
                <a class="page-link" href="{{pageLink}}">
                                <span class="material-icons">
                                  keyboard_arrow_right
                                </span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        {{/nextPageNav}}
    </ul>
</nav>